<!DOCTYPE html>
<html lang="<%= htmlHead.lang %>">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Personal portfolio page">
    <meta name="keywords" content="HTML, CSS, JavaScript">
    <meta name="author" content="MÃ¡rton Spiteller">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/style.css">
    <script src="assets/icons.js"></script>
    <title>
        <%= htmlHead.title %>
    </title>
</head>

<body>
    <main>
        <!--<header> </header>-->
        <section id="hero">
            <h1>
                <%= hero.name %>
            </h1>
            <h2>
                <%= hero.title %>
            </h2>

        </section>
        <section id="about">
            <h2 id="about__title">
                <%= aboutAndContact.sectionTitle %>
            </h2>
            <div id="about__body">
                <p>
                    <%= aboutAndContact.sectionBio %>
                </p>
                <ul>
                    <% aboutAndContact.toolsAndLanguages.forEach(item=>{ %>
                        <li class="about__item">
                            <p>
                                <%= item.name %>
                            </p>
                            <span class="about-item__logo" id="<%=item.logo%>"></span>
                        </li>
                        <% }) %>
                </ul>

            </div>
            <button onclick="scrollToContact()">
                <%= hero.cta %>
            </button>
        </section>
        <section id="projects">
            <h2>
                <%= projects.sectionTitle %>
            </h2>
            <div id="project__cards-warpper">
                <% projects.projects.forEach(project=>{ %>
                    <div class="project__card">
                        <h3>
                            <%= project.name %>
                        </h3>
                        <p>
                            <%= project.description %>
                        </p>
                        <div>
                            <% project.pictures.forEach(picture=>{ %>
                                <span>
                                    <%= picture %>
                                </span>
                                <% }) %>
                        </div>
                        <div>
                            <% project.stack.forEach(item=>{ %>
                                <p class="card__item">
                                    <%= item.name %>
                                </p>
                                <% }) %>
                        </div>
                        <a href="<%= project.link %>">
                            <%= project.link %>
                        </a>
                        <br>
                        <a href="<%= project.github %>">
                            <%= project.github %>
                        </a>
                    </div>
                    <% }) %>
            </div>
        </section>
        <section id="contact">
            <h1>Contact</h1>
        </section>
        <footer>
            <p>footer</p>
        </footer>
    </main>
    <script>
        const body = document.getElementsByTagName("body")[0];
        window.addEventListener("load", setGrayscale);
        function setGrayscale() {
            setTimeout(() => { body.style.filter = "grayscale(0)"; }, 1300);
            //body.style.filter = "grayscale(0)";
        }

        const contact = document.getElementById("contact");
        function scrollToContact() {
            contact.scrollIntoView({ behavior: "smooth" });
        }

        const aboutListItems = document.getElementsByClassName("about__item");
        for (const element of aboutListItems) {
            console.log(element.children[1].id)
            element.children[1].innerHTML = icons[element.children[1].id];
        }
    </script>
</body>

</html>
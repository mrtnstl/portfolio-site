<!DOCTYPE html>
<html lang="<%= htmlHead.lang %>">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Personal portfolio page">
    <meta name="keywords" content="HTML, CSS, JavaScript">
    <meta name="author" content="Márton Spiteller">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="styles/style.css">
    <script src="assets/icons.js"></script>
    <title>
        <%= htmlHead.title %>
    </title>
</head>

<body data-color-scheme="">
    <!--<div id="page-loader">
        <p>loading...</p>
    </div>-->
    <section id="hero">
        <div id="page-controls">
            <div id="page-controls-lang">
                <a href="/en">en</a>
                <a href="/hu">hu</a>
            </div>
            <button class="button_icon" id="color-mode-button" aria-label="theme switcher">
                <span id="color-mode-button-light">
                    <svg width="40px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                        <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                        <g id="SVGRepo_iconCarrier">
                            <g id="Environment / Sun">
                                <path class="color-mode-icon" id="Vector"
                                    d="M12 4V2M12 20V22M6.41421 6.41421L5 5M17.728 17.728L19.1422 19.1422M4 12H2M20 12H22M17.7285 6.41421L19.1427 5M6.4147 17.728L5.00049 19.1422M12 17C9.23858 17 7 14.7614 7 12C7 9.23858 9.23858 7 12 7C14.7614 7 17 9.23858 17 12C17 14.7614 14.7614 17 12 17Z"
                                    stroke="var(--color-color-mode-icon)" stroke-width="2" stroke-linecap="round"
                                    stroke-linejoin="round">
                                </path>
                            </g>
                        </g>
                    </svg>
                </span>
                <span id="color-mode-button-dark">
                    <svg width="40px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                        <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                        <g id="SVGRepo_iconCarrier">
                            <path class="color-mode-icon"
                                d="M3.32031 11.6835C3.32031 16.6541 7.34975 20.6835 12.3203 20.6835C16.1075 20.6835 19.3483 18.3443 20.6768 15.032C19.6402 15.4486 18.5059 15.6834 17.3203 15.6834C12.3497 15.6834 8.32031 11.654 8.32031 6.68342C8.32031 5.50338 8.55165 4.36259 8.96453 3.32996C5.65605 4.66028 3.32031 7.89912 3.32031 11.6835Z"
                                stroke="var(--color-color-mode-icon)" stroke-width="2" stroke-linecap="round"
                                stroke-linejoin="round"></path>
                        </g>
                    </svg>
                </span>
            </button>
        </div>
        <h1 id="authorName">
            <%= hero.name %>
        </h1>
        <h2>
            <%= hero.title %>
        </h2>

    </section>
    <section id="about">
        <h2 id="about__title">
            <%= about.sectionTitle %>
        </h2>
        <div id="about-flex-temp">
            <div id="about-image-wrapper">
                <img id="about-image" src="/images/profile/profilepic_placeholder.png" alt="My Profile Picture">
            </div>
            <div id="about__body">
                <p>
                    <%= about.sectionBio %>
                </p>
                <ul id="toolsAndLanguages__list">
                    <% about.toolsAndLanguages.forEach(item=>{ %>
                        <li class="about__item">
                            <p class="about-item-name">
                                <%= item.name %>
                            </p>
                            <span class="about-item__logo" id="<%=item.logo%>"></span>
                        </li>
                        <% }) %>
                </ul>
            </div>
        </div>
        <button class="button_standard" id="hero-btn" onclick="scrollToSection('contact')">
            <%= hero.cta %>
        </button>
    </section>
    <section id="projects">
        <h2>
            <%= projects.sectionTitle %>
        </h2>
        <div id="project__cards-warpper">
            <% projects.projects.forEach(project=>{ %>
                <% if(project.isPublic){ %>
                    <div class="project__card">
                        <h3 class="project-card-title">
                            <%= project.name %>
                        </h3>
                        <p class="project-card-description">
                            <%= project.description %>
                        </p>
                        <div style="display: none;">
                            <% project.pictures.forEach(picture=>{ %>
                                <span>
                                    <%= picture %>
                                </span>
                                <% }) %>
                        </div>
                        <div class="project-card-tools-wrapper">
                            <% project.stack.forEach(item=>{ %>
                                <p class="card__item">
                                    <%= item.name %>
                                </p>
                                <% }) %>
                        </div>
                        <div class="project-card-links">
                            <a href="<%= project.link.url %>" target="_blank">
                                <%= project.link.text %>
                            </a>
                            <a href="<%= project.github.url %>" target="_blank">
                                <%= project.github.text %>
                            </a>
                        </div>
                    </div>
                    <% }%>
                        <% }) %>
        </div>
    </section>
    <section id="contact">
        <h2>
            <%= contact.sectionTitle %>
        </h2>
        <div>
            <span class="contact-item">
                <svg width="40px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                    <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                    <g id="SVGRepo_iconCarrier">
                        <path d="M4 7.00005L10.2 11.65C11.2667 12.45 12.7333 12.45 13.8 11.65L20 7"
                            stroke="var(--color-primary)" stroke-width="2" stroke-linecap="round"
                            stroke-linejoin="round"></path>
                        <rect x="3" y="5" width="18" height="14" rx="2" stroke="var(--color-primary)" stroke-width="2"
                            stroke-linecap="round"></rect>
                    </g>
                </svg>
                <p id="email-address">email</p>
            </span>
            <span class="contact-item">
                <svg width="40px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                    <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                    <g id="SVGRepo_iconCarrier">
                        <path
                            d="M6.5 8C7.32843 8 8 7.32843 8 6.5C8 5.67157 7.32843 5 6.5 5C5.67157 5 5 5.67157 5 6.5C5 7.32843 5.67157 8 6.5 8Z"
                            fill="var(--color-primary)"></path>
                        <path
                            d="M5 10C5 9.44772 5.44772 9 6 9H7C7.55228 9 8 9.44771 8 10V18C8 18.5523 7.55228 19 7 19H6C5.44772 19 5 18.5523 5 18V10Z"
                            fill="var(--color-primary)"></path>
                        <path
                            d="M11 19H12C12.5523 19 13 18.5523 13 18V13.5C13 12 16 11 16 13V18.0004C16 18.5527 16.4477 19 17 19H18C18.5523 19 19 18.5523 19 18V12C19 10 17.5 9 15.5 9C13.5 9 13 10.5 13 10.5V10C13 9.44771 12.5523 9 12 9H11C10.4477 9 10 9.44772 10 10V18C10 18.5523 10.4477 19 11 19Z"
                            fill="var(--color-primary)"></path>
                        <path fill-rule="evenodd" clip-rule="evenodd"
                            d="M20 1C21.6569 1 23 2.34315 23 4V20C23 21.6569 21.6569 23 20 23H4C2.34315 23 1 21.6569 1 20V4C1 2.34315 2.34315 1 4 1H20ZM20 3C20.5523 3 21 3.44772 21 4V20C21 20.5523 20.5523 21 20 21H4C3.44772 21 3 20.5523 3 20V4C3 3.44772 3.44772 3 4 3H20Z"
                            fill="var(--color-primary)"></path>
                    </g>
                </svg>
                <p id="linkedin-link">linkedin</p>
            </span>
        </div>
    </section>


    <footer>
        <div id="footer-top">
            <div>
                <h1>
                    <%= footer.initials %>
                </h1>
                <div>
                    <a href="/en">en</a>
                    <a href="/hu">hu</a>
                </div>
            </div>
            <button class="button_icon" id="back-to-top-button" onclick="scrollToSection('hero')"
                aria-label="<%= footer.backToTopButton %>">
                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <g id="SVGRepo_bgCarrier" stroke-width="0"></g>
                    <g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g>
                    <g id="SVGRepo_iconCarrier">
                        <path fill-rule="evenodd" clip-rule="evenodd"
                            d="M12 3C12.2652 3 12.5196 3.10536 12.7071 3.29289L19.7071 10.2929C20.0976 10.6834 20.0976 11.3166 19.7071 11.7071C19.3166 12.0976 18.6834 12.0976 18.2929 11.7071L13 6.41421V20C13 20.5523 12.5523 21 12 21C11.4477 21 11 20.5523 11 20V6.41421L5.70711 11.7071C5.31658 12.0976 4.68342 12.0976 4.29289 11.7071C3.90237 11.3166 3.90237 10.6834 4.29289 10.2929L11.2929 3.29289C11.4804 3.10536 11.7348 3 12 3Z"
                            fill="var(--color-footer-text)"></path>
                    </g>
                </svg>
            </button>
        </div>
        <p>© 2025 <%= footer.bottomText %>
        </p>
    </footer>
    <script>
        const pageLoader = document.querySelector("#page-loader");
        const body = document.querySelector("body");
        const heroName = document.querySelector("#authorName");
        const emailAddressParagraph = document.querySelector("#email-address");
        const linkedinLink = document.querySelector("#linkedin-link");

        let documentColorScheme = body.getAttribute("data-color-scheme");
        let storedColorScheme = localStorage.getItem("colorScheme");

        if (!storedColorScheme) {
            localStorage.setItem("colorScheme", "light");
            storedColorScheme = localStorage.getItem("colorScheme");
            body.setAttribute("data-color-scheme", storedColorScheme);
        } else {
            body.setAttribute("data-color-scheme", storedColorScheme);
        }

        const colorModeButton = document.querySelector("#color-mode-button");
        colorModeButton.addEventListener("click", handleColorModeChange);
        function handleColorModeChange() {
            storedColorScheme = localStorage.getItem("colorScheme");
            storedColorScheme === "dark" ? localStorage.setItem("colorScheme", "light") : localStorage.setItem("colorScheme", "dark");
            newColorScheme = storedColorScheme === "dark" ? "light" : "dark";
            body.setAttribute("data-color-scheme", newColorScheme);
        }

        window.addEventListener("load", onPageLoad);
        function onPageLoad() {
            //pageLoader.remove();
            heroName.style.textShadow = `2px 3px 0 ${getComputedStyle(body).getPropertyValue("--color-accent")}`;
            body.style.filter = "grayscale(0)";
        }

        function scrollToSection(section) {
            const sectionElement = document.getElementById(section);
            sectionElement.scrollIntoView({ behavior: "smooth" });
        }

        const aboutListItems = document.getElementsByClassName("about__item");
        for (const element of aboutListItems) {
            element.children[1].innerHTML = icons[element.children[1].id];
        }

        fetch("/email", {
            "Content-Type": "application/json"
        }).then(response => response.json())
            .then(data => emailAddressParagraph.innerText = data.email)
            .catch(err => console.log);

        fetch("/linkedin", {
            "Content-Type": "application/json"
        }).then(response => response.json())
            .then(data => linkedinLink.innerText = data.linkedin)
            .catch(err => console.log);

    </script>
</body>

</html>